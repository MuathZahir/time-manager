
<label class="switch switch-yes-no">
    <InputCheckbox @bind-Value="Value" class="switch-input"/>
    <span class="switch-label" data-on="@ContentOn" data-off="@ContentOff"></span> 
    <span class="switch-handle"></span> 
</label>

@code
{
    [Parameter] public bool Value { get; set; }

    [Parameter] public RenderFragment? ContentOn { get; set; }
    [Parameter] public RenderFragment? ContentOff { get; set; }

}
